<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="100.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.pauseGui.pauseGui">
   <children>
      <VBox prefHeight="100.0" prefWidth="500.0">
         <children>
            <Label alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="500.0" text="CLick resume to Continue (^_^), or Cancel to Stop downloading :(">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Label>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <Button fx:id="cancelid" mnemonicParsing="false" onAction="#Cancel" stylesheets="@../css/pasueGui.css" text="Cancel">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                     <styleClass>
                        <String fx:value="cancelBtn" />
                        <String fx:value="cancelBtn" />
                     </styleClass>
                  </Button>
                  <Button fx:id="resumeid" mnemonicParsing="false" onAction="#Resume" styleClass="resumeBtn" stylesheets="@../css/pasueGui.css" text="Resume">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <padding>
                        <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
